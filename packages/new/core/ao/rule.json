{
    "lists": {
        "ruleList": {
            "id": "code",
            "getList": "getRuleList",
            "columns": {
                "code": {
                    "title": "Code",
                    "width": 200
                },
                "name": {
                    "title": "Name",
                    "flex": 1
                }
            },
            "actions": [
                {
                    "title": "Refresh",
                    "icon": "refresh",
                    "mini": true,
                    "command": {
                        "type": "standard",
                        "call": "refresh"
                    }
                },
                {
                    "title": "Create",
                    "icon": "add",
                    "mini": true,
